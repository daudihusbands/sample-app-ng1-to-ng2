{
  "include": [
    // "app/bootstrap/bootstrap.ts",
    // "app/contacts/index.ts",
    "app/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "rootDir": "app",
    "outDir": "transpiled/app",
    "declaration": false,
    "sourceMap": true,
    "lib": ["es6", "dom"]
  }
}
